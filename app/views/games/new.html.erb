<div class="banner">
  <div class="container">
    <div class="content"></div>
      <h1 class="text-center title">New Game</h1>
      <div class="letters">
        <% @letters.each { |letter| %>
        <div class="letter text-center">
          <%=letter%>
        </div>
        <% } %>
      </div>
      <div class="proposal text-center">
        <p>What is the longest word you can find?</p>
        <form action="/score" method="get" class="input-group">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="hidden" name="letters" value="<%= @letters %>">
          <input type="text" name="word" placeholder="use each letter one time max" class="form-control">
          <input type="submit" class="button-input">
        </form>
      </div>
    </div>
  </div>
</div>
